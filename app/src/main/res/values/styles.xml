<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/colorContentBg</item>
        <item name="android:statusBarColor">@color/colorContentBg</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:textColor">@color/colorTextColor</item>
        <item name="android:textSize">@dimen/global_text_size</item>
    </style>

    <style name="GlobalTextStyle">
        <item name="android:textSize">@dimen/global_text_size</item>
        <item name="android:textColor">@color/colorTextColor</item>
    </style>

    <style name="WeiboOperationButtonStyle">
        <item name="android:layout_width">@dimen/weibo_item_operation_button_width</item>
        <item name="android:layout_height">@dimen/weibo_item_operation_button_height</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="textSize">@dimen/weibo_item_operation_button_text_size</item>
        <item name="textColor">@color/colorSecondaryTextColor</item>
        <item name="drawableWidth">@dimen/weibo_item_operation_button_image_size</item>
        <item name="drawableHeight">@dimen/weibo_item_operation_button_image_size</item>
        <item name="drawablePadding">2dp</item>
        <item name="drawableGravity">start</item>
        <item name="drawableTint">@color/colorSvgTint</item>
    </style>

    <style name="DialogButtonTextStyle">
        <item name="android:textSize">@dimen/global_text_size</item>
        <item name="android:textColor">@drawable/color_dialog_button_text</item>
        <item name="android:layout_height">@dimen/dialog_button_height</item>
        <item name="android:layout_width">@dimen/dialog_button_width</item>
        <item name="android:gravity">center_vertical|end</item>
    </style>

    <style name="GlobalDialogStyle">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>
</resources>